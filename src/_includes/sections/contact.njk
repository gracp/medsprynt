<!-- Contact Section -->
<section id="contact" class="bg-cyan-50 py-24">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-cyan-900 mb-4">Ready to Unlock AI Growth for Your Med Tech Brand?</h2>
      <p class="text-lg text-cyan-800 max-w-2xl mx-auto">Let's discuss your specific challenges and build a custom AI automation plan to drive efficiency and sales.</p>
    </div>
    
    <div class="max-w-5xl mx-auto grid grid-cols-1 lg:grid-cols-3 gap-12">
      <!-- Contact Form Column -->
      <div class="lg:col-span-2">
        <form
          name="medsprynt-contact"
          method="POST"
          data-netlify="true"
          netlify-honeypot="bot-field"
          class="bg-white rounded-xl shadow-lg p-10"
          x-data="{ submitted: false }"
          x-show="!submitted"
          @submit.prevent="
            fetch('/', { 
              method: 'POST',
              headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
              body: new URLSearchParams(new FormData($event.target)).toString()
            })
            .then(() => { submitted = true; })
            .catch(error => console.error('Error:', error))
          "
        >
          <input type="hidden" name="form-name" value="medsprynt-contact" />
          <p class="hidden">
            <label>Don't fill this out if you're human: <input name="bot-field" /></label>
          </p>
          
          <h3 class="text-xl font-bold text-gray-800 mb-8">Request a Free Strategy Call</h3>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Your Name</label>
              <input
                type="text"
                id="name"
                name="name"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-cyan-500 focus:border-cyan-500"
                required
              >
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Business Email</label>
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-cyan-500 focus:border-cyan-500"
                required
              >
            </div>
          </div>
          
          <div class="mb-8">
            <label for="company" class="block text-sm font-medium text-gray-700 mb-2">Company Name</label>
            <input
              type="text"
              id="company"
              name="company"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-cyan-500 focus:border-cyan-500"
              required
            >
          </div>
          
          <div class="mb-8">
            <label for="message" class="block text-sm font-medium text-gray-700 mb-2">What's your biggest Med Tech automation challenge?</label>
            <textarea
              id="message"
              name="message"
              rows="4"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-cyan-500 focus:border-cyan-500"
            ></textarea>
          </div>
          
          <div class="text-center">
            <button
              type="submit"
              class="inline-flex items-center justify-center font-semibold rounded-xl bg-cyan-600 text-white hover:bg-cyan-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cyan-500 px-10 py-4 text-lg transition-all"
            >
              Book a Free Strategy Call
            </button>
          </div>
        </form>

        <div 
          x-data="{ submitted: false }"
          x-show="submitted"
          class="bg-white rounded-xl shadow-lg p-10 text-center"
        >
          <svg class="w-16 h-16 text-green-500 mx-auto mb-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <h3 class="text-2xl font-bold mb-4">Thank You!</h3>
          <p class="text-gray-600 mb-8">We've received your request and will reach out within 24 hours to schedule your strategy call.</p>
          <a href="#" class="text-cyan-600 underline hover:text-cyan-800">Return to Home</a>
        </div>
        
        <div class="mt-6 text-sm text-cyan-800 opacity-80">
          <p>Your information is secure and will never be shared with third parties. By submitting this form, you agree to our <a href="/privacy-policy" class="underline hover:text-cyan-900">Privacy Policy</a>.</p>
        </div>

        <div class="mt-12 text-center">
          <h4 class="text-lg font-bold text-cyan-700 mb-4">Prefer to schedule instantly?</h4>
          <p class="text-gray-600 mb-4">Book your free strategy call directly with our Calendly calendar below.</p>
          <div class="w-full max-w-xl mx-auto">
            <iframe src="https://calendly.com/grapo" width="100%" height="600" frameborder="0" class="rounded-xl shadow-md w-full" style="min-height:400px;" title="Book a Strategy Call"></iframe>
          </div>
        </div>
      </div>
      
      <!-- Alternative Contact Methods Column -->
      <div class="bg-white rounded-xl shadow-lg p-10">
        <h3 class="text-xl font-bold text-gray-800 mb-8">Alternative Ways to Connect</h3>
        
        <!-- Direct Email -->
        <div class="mb-8">
          <p class="text-sm font-medium text-gray-600 uppercase tracking-wide mb-2">Email Us Directly</p>
          <a href="mailto:hello@medsprynt.com" class="flex items-center text-cyan-700 hover:text-cyan-800 group">
            <svg class="w-5 h-5 mr-2 text-cyan-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <span class="text-lg group-hover:underline">hello@medsprynt.com</span>
          </a>
        </div>
        
        <!-- Calendly Scheduling -->
        <div class="mb-8">
          <p class="text-sm font-medium text-gray-600 uppercase tracking-wide mb-2">Schedule Directly</p>
          <a 
            href="https://calendly.com/grapo" 
            target="_blank" 
            class="flex items-center text-cyan-700 hover:text-cyan-800 mb-2 group"
          >
            <svg class="w-5 h-5 mr-2 text-cyan-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <span class="text-lg group-hover:underline">Book a 30-min Strategy Call</span>
          </a>
          <div class="mt-4">
            <a 
              href="https://calendly.com/grapo" 
              target="_blank"
              class="inline-block w-full py-4 px-4 bg-cyan-50 text-cyan-700 text-center rounded-xl border border-cyan-200 hover:bg-cyan-100 transition-colors"
            >
              View Available Times
            </a>
          </div>
        </div>
        
        <!-- Social Media -->
        <div>
          <p class="text-sm font-medium text-gray-600 uppercase tracking-wide mb-4">Connect on Social</p>
          <div class="flex space-x-6">
            <a href="https://linkedin.com/company/medsprynt" target="_blank" class="text-cyan-600 hover:text-cyan-800">
              <span class="sr-only">LinkedIn</span>
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
            <a href="https://twitter.com/medsprynt" target="_blank" class="text-cyan-600 hover:text-cyan-800">
              <span class="sr-only">Twitter</span>
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>