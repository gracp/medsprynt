<!-- Header -->
<header class="bg-white py-4 border-b border-gray-200 sticky top-0 z-50" aria-label="Site header" role="banner">
  <div class="container mx-auto px-4 flex justify-between items-center">
    <a href="/" class="text-xl font-bold text-cyan-600 bg-cyan-100 px-3 py-1 rounded">Med Sprynt</a>
    
    <nav 
      class="hidden md:flex items-center space-x-6"
      x-data="{ pathname: window.location.pathname }"
      aria-label="Main navigation"
      role="navigation"
    >
      <a href="/#solutions" class="text-gray-600 hover:text-gray-900" :class="pathname === '/' && window.location.hash === '#solutions' ? 'text-gray-900' : ''">Solutions</a>
      <a href="/#process" class="text-gray-600 hover:text-gray-900" :class="pathname === '/' && window.location.hash === '#process' ? 'text-gray-900' : ''">Our Process</a>
      <a href="/#challenges" class="text-gray-600 hover:text-gray-900" :class="pathname === '/' && window.location.hash === '#challenges' ? 'text-gray-900' : ''">Challenges Solved</a>
      <a href="/blog" class="text-gray-600 hover:text-gray-900" :class="pathname.startsWith('/blog') ? 'text-gray-900' : ''">Insights Blog</a>
      <a href="/#about" class="text-gray-600 hover:text-gray-900" :class="pathname === '/' && window.location.hash === '#about' ? 'text-gray-900' : ''">About Grapo</a>
    </nav>
    
    <a href="/#contact"
      class="hidden md:inline-flex items-center justify-center font-semibold rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 transition duration-150 ease-in-out bg-cyan-500 text-white hover:bg-cyan-600 focus:ring-cyan-500 px-5 py-2.5 text-base">
      Get Custom AI Plan
    </a>
    
    <!-- Mobile Menu Button -->
    <button 
      class="md:hidden text-gray-600"
      x-data="{ mobileMenuOpen: false }"
      @click="mobileMenuOpen = !mobileMenuOpen"
    >
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
        stroke="currentColor" class="w-6 h-6" x-show="!mobileMenuOpen">
        <path stroke-linecap="round" stroke-linejoin="round"
          d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
      </svg>
      
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
        stroke="currentColor" class="w-6 h-6" x-show="mobileMenuOpen">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
      </svg>
      
      <!-- Mobile Menu -->
      <div 
        x-show="mobileMenuOpen"
        x-transition:enter="transition ease-out duration-200"
        x-transition:enter-start="opacity-0 scale-95"
        x-transition:enter-end="opacity-100 scale-100"
        x-transition:leave="transition ease-in duration-150"
        x-transition:leave-start="opacity-100 scale-100"
        x-transition:leave-end="opacity-0 scale-95"
        class="absolute top-16 left-0 right-0 bg-white border-b border-gray-200 shadow-lg z-50 p-4"
        @click.away="mobileMenuOpen = false"
        aria-label="Mobile navigation menu"
        role="menu"
      >
        <div class="flex flex-col space-y-4">
          <a href="/#solutions" class="text-gray-600 hover:text-gray-900 py-2" @click="mobileMenuOpen = false">Solutions</a>
          <a href="/#process" class="text-gray-600 hover:text-gray-900 py-2" @click="mobileMenuOpen = false">Our Process</a>
          <a href="/#challenges" class="text-gray-600 hover:text-gray-900 py-2" @click="mobileMenuOpen = false">Challenges Solved</a>
          <a href="/blog" class="text-gray-600 hover:text-gray-900 py-2" @click="mobileMenuOpen = false">Insights Blog</a>
          <a href="/#about" class="text-gray-600 hover:text-gray-900 py-2" @click="mobileMenuOpen = false">About Grapo</a>
          <a href="/#contact" class="inline-flex items-center justify-center font-semibold rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 transition duration-150 ease-in-out bg-cyan-500 text-white hover:bg-cyan-600 focus:ring-cyan-500 px-5 py-2.5 text-base w-full text-center" @click="mobileMenuOpen = false">
            Get Custom AI Plan
          </a>
        </div>
      </div>
    </button>
  </div>
</header>
<!-- Sticky Mobile CTA -->
<div class="fixed bottom-0 left-0 right-0 z-50 md:hidden flex justify-center pointer-events-none" aria-label="Sticky mobile call to action" role="complementary">
  <a href="/#contact" class="pointer-events-auto m-4 px-6 py-3 bg-cyan-600 text-white font-bold rounded-full shadow-lg text-lg flex items-center justify-center gap-2 animate-bounce hover:bg-cyan-700 transition">
    <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M8 17l4 4 4-4m0-5V3"/></svg>
    Book Free Strategy Call
  </a>
</div> 